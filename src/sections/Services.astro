        {
          galleryImages.map((image, index) => (
            <Image
              src={image.src}
              alt={image.alt}
              width={100}
              height={100}
              class={`absolute w-${index === 0 || index === 2 ? "3/5" : "1/2"} z-${index * 10} 
                transform ${index % 2 === 0 ? "rotate-2" : "-rotate-3"} hover:z-40 h-48 object-cover rounded-xl 
                shadow-xl transition-all duration-300 hover:scale-105 border-2 border-white/10 
                hover:border-gold-light/30 hover:shadow-gold/20
                ${
                  index === 0
                    ? "top-4 right-4"
                    : index === 1
                      ? "top-0 left-0"
                      : index === 2
                        ? "top-60 right-0"
                        : "top-96 left-8"
                }`}
              loading="lazy"
            />
          ))
        }
      </div>
    </div>
  </div>
