---
import Layout from "../layouts/Layout.astro";
import { Button } from "../components";

const title = "Página no encontrada | BeccaStudio";
const description = "Lo sentimos, la página que buscas no existe.";
---

<Layout title={title} description={description}>
  <div
    class="min-h-screen flex flex-col items-center justify-center text-center px-4 py-24"
  >
    <h1 class="text-6xl md:text-8xl font-bold text-gold-light mb-4">404</h1>
    <h2 class="text-2xl md:text-3xl font-semibold mb-6">
      Página no encontrada
    </h2>
    <p class="text-white/70 max-w-md mb-8">
      Lo sentimos, la página que estás buscando no existe o ha sido movida a
      otra ubicación.
    </p>
    <Button
      variant="primary"
      href="/"
      text="Volver al inicio"
      class="min-w-40"
    />
  </div>
</Layout>
